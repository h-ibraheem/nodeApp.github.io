<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')%>

    <body>
        <%- include('../partials/nav.ejs')%>

            <div class="overflow-hidden card table-nowrap table-card">
                <div class="card-header d-flex justify-content-between align-items-center">

                    <a href="/" class="btn btn-light btn-sm">All Customer</a>
                </div>

                <form class="row g-3 container m-auto pb-4" action="/customer" method="POST">
                    <div class="col-md-4">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="col-md-4">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" name="country">
                    </div>
                    <div class="col-md-4">
                        <label for="mobile" class="form-label">Mobile</label>
                        <input type="text" class="form-control" id="mobile" name="mobile">
                    </div>
                    <div class="col-md-4">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>

                    <div class="col-md-4">
                        <label for="imgUrl" class="form-label">imgUrl</label>
                        <input type="text" class="form-control" id="imgUrl" name="imgUrl">
                    </div>

                    <div class="col-md-8">
                        <label for="note" class="form-label">Note</label>
                        <input type="text" class="form-control" id="note" name="note">
                    </div>


                    <div class="col-12">
                        <button type="submit" class="btn btn-primary ">Save</button>
                    </div>
                </form>
            </div>



            <%- include('../partials/footer.ejs')%>
                <%- include ('../partials/script.ejs')%>
    </body>

</html>